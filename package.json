{
  "name": "tsapp-desktop",
  "author": "TS Shara",
  "description": "Aplicativo TSApp Desktop para monitoramento e controle de Nobreak TS Shara.",
  "version": "3.0.0",
  "type": "module",
  "main": "dist/main/main.js",
  "buildVersion": "3.2.0",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "cross-env NODE_ENV=development tsc-watch --project tsconfig.main.json --onSuccess \"npx electron ./dist/main/main.js\"",
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:main\"",
    "build": "vite build && tsc -p tsconfig.json",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "br.com.tsappfordesktop",
    "productName": "TSApp Desktop",
    "extends": null,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sqlite3/**",
      "**/node_modules/serialport/**"
    ],
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "node_modules/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "identity": null
    }
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "axios": "^1.13.1",
    "bootstrap": "^5.3.8",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-vite": "^4.0.1",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "node-fetch": "^2.7.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-gauge-component": "^1.2.64",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.3",
    "serialport": "^13.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-bootstrap": "^1.0.1",
    "@types/react-dom": "^19.1.9",
    "@types/sqlite3": "^3.1.11",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.1"
  }
}
